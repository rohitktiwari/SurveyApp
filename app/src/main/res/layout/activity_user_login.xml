<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UserLoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="0.4"
        android:scaleType="fitXY"
        android:src="@drawable/bg_2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:padding="10dp">
            <ImageView
                android:layout_margin="20dp"
                android:src="@drawable/sugar_cane_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <EditText
                android:background="@drawable/edittextshape"
                android:id="@+id/etDivtxt"
                android:padding="5dp"
                android:textAllCaps="true"
                android:inputType="textCapCharacters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawablePadding="5dp"
                android:imeOptions="actionNext"
                android:textColorHint="@color/light_grey"
                android:drawableStart="@drawable/ic_menu_gallery"
                android:hint="Enter Divison"
                android:textColor="@color/black"  />
            <EditText
                android:background="@drawable/edittextshape"
                android:id="@+id/userid_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:imeOptions="actionNext"
                android:drawablePadding="5dp"
                android:hint="UserID"
                android:textColorHint="@color/light_grey"
                android:drawableStart="@drawable/ic_user_id_24dp"
                android:textColor="@color/black" />



            <EditText
                android:background="@drawable/edittextshape"
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:imeOptions="actionGo"
                android:drawablePadding="5dp"
                android:textColorHint="@color/light_grey"
                android:drawableStart="@drawable/ic_password_24dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColor="@color/black" />




            <TextView
                android:id="@+id/tvAdminName"
                android:background="@drawable/edittextshape"
                android:layout_gravity="end"
                android:minWidth="100dp"
                android:textStyle="bold"
                android:typeface="sans"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <Spinner
                android:visibility="gone"
                android:id="@+id/division_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <Button
                android:textColor="@android:color/white"
                android:background="@drawable/buttonshape"
                android:id="@+id/login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="login" />

            <EditText
                android:background="@drawable/editdisableshape"
                android:id="@+id/etIP"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:focusable="false"
                android:padding="10dp"
                android:drawableStart="@drawable/ic_password_24dp"
                android:textSize="20sp"
                android:layout_gravity="bottom"
                android:drawablePadding="5dp"
                android:textColorHint="@color/light_grey"
                android:text="199.217.112.145:8089"
                android:visibility="gone"
                android:textColor="@color/white"
                android:inputType="numberDecimal" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:text="Version:"
        android:textSize="@dimen/textViewTxtSize"
        android:textColor="@color/white"/>
</RelativeLayout>