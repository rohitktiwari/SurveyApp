                    android:textSize="12sp"
                    android:visibility="invisible" />

            </RadioGroup>-->

            <EditText
                android:id="@+id/etPlantTypeCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_red_colour"
                android:hint="@string/plantTypeCode"
                android:visibility="gone"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plantTypeCode"
                android:visibility="gone"
                android:textSize="@dimen/textViewTxtSize" />

            <EditText
                android:id="@+id/etPlantType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editdisableshape"
                android:enabled="false"
                android:hint="@string/plantType"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="10dp"
                android:visibility="gone"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonshape"
                android:text="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>